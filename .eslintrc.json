{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "warn",
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": ["**/webpack.*.js"]
            }
        ]
    }
}
